<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="25dp" android:visibility="visible"
        android:id="@+id/DOM">

    <TextView
            android:text="Individual Rolls"
            android:layout_width="101dp"
            android:layout_height="20dp" tools:layout_editor_absoluteY="270dp"
            android:id="@+id/singleResultsLabel" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.501" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="118dp"
            android:layout_height="45dp"
            android:id="@+id/singleResultsText" android:layout_marginTop="104dp"
            app:layout_constraintTop_toBottomOf="@+id/dicerLogo" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" tools:textSize="36sp"
            tools:textColor="?attr/editTextColor"/>
    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="344dp"
            android:layout_height="64dp"
            android:max="10"
            android:progress="3"
            android:id="@+id/dieQty"
            android:visibility="visible" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.903"/>

    <ImageView
            android:layout_width="134dp"
            android:layout_height="105dp" app:srcCompat="@mipmap/dices"
            android:id="@+id/dicerLogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            android:contentDescription="@string/diceImage" android:layout_marginEnd="112dp"/>
    <TextView
            android:text="Die QTY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/dieQtyLabel" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/dieQty"/>
    <Button
            android:text="ROLL!"
            android:layout_width="257dp"
            android:layout_height="43dp"
            android:id="@+id/rollButton"
            app:layout_constraintTop_toBottomOf="@+id/dieQty" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.504" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="118dp"
            android:layout_height="45dp"
            android:id="@+id/totalResultText" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/dicerLogo" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent" tools:textSize="36sp"
            tools:textColor="?attr/editTextColor"/>
    <TextView
            android:text="Total"
            android:layout_width="35dp"
            android:layout_height="20dp" tools:layout_editor_absoluteY="181dp"
            android:id="@+id/totalResultLabel" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>